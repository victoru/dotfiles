! vim: set filetype=xdefaults :
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.dpi: 96
Xft.rgba: rgb
URxvt.depth: 32

URxvt*letterSpace: -2

URxvt.font:              xft:EnvyCodeRForPowerline:size=9:autohint=true
URxvt.italicFont:        xft:EnvyCodeRForPowerline:size=9:italic:autohint=true
URxvt.boldItalicFont:    xft:EnvyCodeRForPowerline:size=9:bold:italic:autohint=true

URxvt*blurRadius: 20x20
URxvt*colorBDMode:  true
URxvt*colorULMode:  true
!URxvt*colorBD:      #3579a8
URxvt*colorUL:      #4eb4fa
! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,matcher
URxvt.matcher.button:       1
URxvt.urlLauncher:          firefox


URxvt*borderColor:        #151515
URxvt*colorBD:            #ffffff
URxvt.cursorColor:        #FDA53C
URxvt*cursorColor2:       #151515


!
URxvt.background: [30]#000000
*foreground: rgb:aa/aa/aa

!black
*color0:  #251f1f
*color8:  #5e5e5e
!red
*color1:  #eb4509
*color9:  #eb4509
!green
*color2:  #94e76b
*color10: #95e76b
!yellow
*color3:  #ffac18
*color11: #ffac18
!blue
*color4:  #46aede
*color12: #46aede
!magenta
*color5:  #e32c57
*color13: #e32c57
!cyan
*color6:  #06989a
*color14: #06989a
!white
*color7:  #efefef
*color15: #efefef

!xterm config
xterm*termName: xterm-color
xterm*background: #000000
xterm*foreground: #A8A8A8
