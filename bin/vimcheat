#!/bin/bash

movement=~/Documents/vim-movement-commands.png
keyboard=~/Documents/vi-vim-cheat-sheet.png
folding=~/Documents/vim-fold-commands.jpg
case $1 in
    movement)
        feh -F $movement
    ;;
    keyboard)
        feh -F -B white $keyboard
    ;;
    folding)
        feh -F $folding
    ;;
    *)
        feh -F -B black $keyboard $movement $folding
        #echo 'usage: vimcheat <movement|keyboard>'
    ;;
esac    
