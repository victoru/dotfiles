[Unit]
Description=Xorg server initializtion
Requisite=desktop.target

After=desktop.target

[Service]
Type=oneshot
Environment=DISPLAY=:0
ExecStart=/usr/bin/setxkbmap -option ctrl:nocaps
ExecStart=/usr/bin/xset +dpms
ExecStart=/usr/bin/xset dpms 0 0 300
ExecStart=/usr/bin/autocutsel -selection PRIMARY -fork
ExecStart=/usr/bin/autocutsel -selection PRIMARY -fork
ExecStart=/etc/X11/xinit/xinitrc.d/xft-settings.sh

Environment=INFINALITY_FT_FRINGE_FILTER_STRENGTH=25
Environment=INFINALITY_FT_USE_VARIOUS_TWEAKS=true
Environment=INFINALITY_FT_WINDOWS_STYLE_SHARPENING_STRENGTH=25
Environment=INFINALITY_FT_STEM_ALIGNMENT_STRENGTH=15
Environment=INFINALITY_FT_STEM_FITTING_STRENGTH=15
Environment="INFINALITY_FT_FILTER_PARAMS=10 25 37 25 10"

ExecStart=/usr/bin/sh -c "systemctl --user import-environment \
    INFINALITY_FT_FRINGE_FILTER_STRENGTH \
    INFINALITY_FT_USE_VARIOUS_TWEAKS \
    INFINALITY_FT_WINDOWS_STYLE_SHARPENING_STRENGTH \
    INFINALITY_FT_STEM_ALIGNMENT_STRENGTH \
    INFINALITY_FT_STEM_FITTING_STRENGTH \
    INFINALITY_FT_FILTER_PARAMS"
